<h1>Lista riesgos</h1>

<table>
  <thead>
    <tr>
      <th>Empresa</th>
      <th>Funcionario</th>
      <th>Fecha</th>
      <th>Area de seccion o puesto de trabajo</th>
      <th>Clase de riesgo</th>
      <th>Factor de riesgo</th>
      <th>Fuente generadora</th>
      <th>Efecto conocido</th>
      <th>Numero de expuestos</th>
      <th>Tiempo</th>
      <th>Controles exitentes</th>
      <th>Controles recomendados</th>
      <th>Consecuencia</th>
      <th>Exposicion</th>
      <th>Factor de ponderacion</th>
      <th>Repercucion del riesgo</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @riesgos.each do |riesgo| %>
      <tr>
        <td><%= riesgo.empresa %></td>
        <td><%= riesgo.funcionario.nombres rescue nil%></td>
        <td><%= riesgo.fecha %></td>
        <td><%= riesgo.areadeseccionopuestodetrabajo %></td>
        <td><%= riesgo.clasederiesgo %></td>
        <td><%= riesgo.factorderiesgo %></td>
        <td><%= riesgo.fuentegeneradora %></td>
        <td><%= riesgo.efectoconocido %></td>
        <td><%= riesgo.numerodeexpuestos %></td>
        <td><%= riesgo.tiempo %></td>
        <td><%= riesgo.controlesexitentes %></td>
        <td><%= riesgo.controlesrecomendados %></td>
        <td><%= riesgo.consecuencia %></td>
        <td><%= riesgo.exposicion %></td>
        <td><%= riesgo.factordeponderacion %></td>
        <td><%= riesgo.repercuciondelriesgo %></td>
        <td><%= link_to 'Ver', riesgo %></td>
        <td><%= link_to 'Editar', edit_riesgo_path(riesgo) %></td>
        <td><%= link_to 'Eliminar', riesgo, method: :delete, data: { confirm: 'estÃ¡ seguro que desea eliminar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
