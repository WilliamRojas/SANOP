<h1>Listing accidents</h1>


<div class="formulario">

<table>
  <thead>
    <tr>
      <th>Nombre diligenciador</th>
      <th>Tipodoc</th>
      <th>Documento</th>
      <th>Nombre afectado</th>
      <th>Tipodoc</th>
      <th>Documento</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accidents.each do |accident| %>
      <tr>
        <td><%= accident.nombre_diligenciador %></td>
        <td><%= accident.tipodoc.nombre rescue nil %></td>
        <td><%= accident.documento %></td>
        <td><%= accident.nombre_afectado %></td>
        <td><%= nombretipodoc(accident.tipodocafectedid) %></td>
        <td><%= accident.documento %></td>
        <td><%= link_to 'Show', accident %></td>
        <td><%= link_to 'Edit', edit_accident_path(accident) %></td>
        <td><%= link_to 'Destroy', accident, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accident', new_accident_path %>

</div>
