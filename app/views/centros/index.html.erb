<h1>Lista de centros</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @centros.each do |centro| %>
      <tr>
        <td><%= centro.nombre %></td>
        <td><%= link_to 'Ver', centro %></td>
        <td><%= link_to 'Editar', edit_centro_path(centro) %></td>
        <td><%= link_to 'Eliminar', centro, method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar este registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

