<h1>Lista de funcionarios</h1>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellidos</th>
      <th>Tipodoc</th>
      <th>Identificacion</th>
      <th>Lugar de expedicion</th>
      <th>Lugar de nacimiento</th>
      <th>Fecha de nacimiento</th>
      <th>Edad</th>
      <th>Genero</th>
      <th>Telefono</th>
      <th>Mail</th>
      <th>Centro</th>
      <th>cargo</th> 
      <th>Area</th>
      <th>Codigo</th>
      <th>Fecha de ingreso</th>
      <th>Antiguedad</th>
      <th>Funciones principales</th>
      <th>Eps</th>
      <th>Afp</th>
      <th>Arl</th>
      
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @funcionarios.each do |funcionario| %>
      <tr>
        <td><%= funcionario.nombres %></td>
        <td><%= funcionario.apellidos %></td>
        <td><%= funcionario.tipodoc.nombre rescue nil %></td>
        <td><%= funcionario.identificacion %></td>
        <td><%= funcionario.lugar_de_expedicion %></td>
        <td><%= funcionario.lugar_de_nacimiento %></td>
        <td><%= funcionario.fecha_de_nacimiento %></td>
        <td><%= funcionario.edad %></td>
        <td><%= mostrar_genero(funcionario.genero )%></td>
        <td><%= funcionario.telefono %></td>
        <td><%= funcionario.mail %></td>
        <td><%= funcionario.centro.nombre rescue nil %></td>
        <td><%= funcionario.cargo %></td>
        <td><%= funcionario.area %></td>
        <td><%= funcionario.codigo %></td>
        <td><%= funcionario.fecha_de_ingreso %></td>
        <td><%= funcionario.antiguedad %></td>
        <td><%= funcionario.funciones_principales %></td>
        <td><%= funcionario.eps %></td>
        <td><%= funcionario.afp %></td>
        <td><%= funcionario.arl %></td>
        
        
        <td><%= link_to 'Ver', funcionario %></td>
        <td><%= link_to 'Editar', edit_funcionario_path(funcionario) %></td>
        <td><%= link_to 'Eliminar', funcionario, method: :delete, data: { confirm: 'EstÃ¡ seguro que desea eliminar el registro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

